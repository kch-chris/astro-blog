---
import BlogPost from "../components/BlogPost.astro";
import { siteConfig } from "../config/site-config";
import MainLayout from "../layouts/MainLayout.astro";

interface CustomDataFile {
  default: Record<string, any>;
}

const matches = import.meta.glob<CustomDataFile>('./posts-old/*.{md,mdx}', { eager: true });
const posts = Object.values(matches);
---

<MainLayout title="Kch's Blog">
    <!-- component -->
<section class=" bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
        <h1 class="text-3xl font-semibold  capitalize lg:text-4xl text-white">{ siteConfig.title}</h1>

        <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
            {
                posts.map((post) => <BlogPost {...post} />)
            }
            
            
        </div>
    </div>
</section>
</MainLayout>